#:import utils kivy.utils
CalculatorLayout:


<CalculatorLayout>:
    orientation: "vertical"
    BoxLayout:
        padding: 20
        size_hint: 1, .25
        Label:
            id: main_output_label
            text_size: self.size
            font_name: "Lcd.ttf"
            text: ""
            max_lines: 1
            font_size: "70dp"
            halign: "right"
            valign: "middle"
            color: utils.get_color_from_hex('#FAE5D3')
    BoxLayout:
        spacing: 20
        padding: 20
        orientation: "vertical"
        size_hint: 1, .75
        BoxLayout:
            spacing: 20
            size_hint: 1, .75 / 4
            ClearButton:
                text: "C"
                on_press: root.on_c_ac_press(self, main_output_label)
                on_release: root.on_c_ac_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#D35400')
                # background_normal: ''
            PlusMinusButton:
                text: "+/-"
                on_press: root.on_plus_minus_press(self, main_output_label)
                on_release: root.on_plus_minus_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#2980B9')
                # background_normal: ''
            SuperOperationalButton:
                text: "âˆš"
                on_press: root.on_square_root_press(self, main_output_label)
                on_release: root.on_square_root_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#A3E4D7')
                # background_normal: ''
            SuperOperationalButton:
                text: "%"
                on_press: root.on_percentage_press(self, main_output_label)
                on_release: root.on_percentage_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#A3E4D7')
                # background_normal: ''
        BoxLayout:
            spacing: 20
            size_hint: 1, .75 / 4
            NumberButton:
                text: "7"
                on_press: root.on_seven_press(self, main_output_label)
                on_release: root.on_seven_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            NumberButton:
                text: "8"
                on_press: root.on_eight_press(self, main_output_label)
                on_release: root.on_eight_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            NumberButton:
                text: "9"
                on_press: root.on_nine_press(self, main_output_label)
                on_release: root.on_nine_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            OperationButton:
                text: "/"
                on_press: root.on_divide_press(self, main_output_label)
                on_release: root.on_divide_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#85C1E9')
                background_normal: ''
        BoxLayout:
            spacing: 20
            size_hint: 1, .75 / 4
            NumberButton:
                text: "4"
                on_press: root.on_four_press(self, main_output_label)
                on_release: root.on_four_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            NumberButton:
                text: "5"
                on_press: root.on_five_press(self, main_output_label)
                on_release: root.on_five_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            NumberButton:
                text: "6"
                on_press: root.on_six_press(self, main_output_label)
                on_release: root.on_six_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            OperationButton:
                text: "X"
                on_press: root.on_multiply_press(self, main_output_label)
                on_release: root.on_multiply_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#85C1E9')
                # background_normal: ''
        BoxLayout:
            spacing: 20
            size_hint: 1, .75 / 4
            NumberButton:
                text: "1"
                on_press: root.on_one_press(self, main_output_label)
                on_release: root.on_one_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            NumberButton:
                text: "2"
                on_press: root.on_two_press(self, main_output_label)
                on_release: root.on_two_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            NumberButton:
                text: "3"
                on_press: root.on_three_press(self, main_output_label)
                on_release: root.on_three_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            OperationButton:
                text: "-"
                on_press: root.on_minus_press(self, main_output_label)
                on_release: root.on_minus_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#85C1E9')
                # background_normal: ''
        BoxLayout:
            spacing: 20
            size_hint: 1, .75 / 4
            NumberButton:
                text: "0"
                on_press: root.on_zero_press(self, main_output_label)
                on_release: root.on_zero_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#884EA0')
                # background_normal: ''
            DecimalButton:
                text: "."
                on_press: root.on_decimal_press(self, main_output_label)
                on_release: root.on_decimal_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#5D6D7E')
                # background_normal: ''
            EqualButton:
                text: "="
                on_press: root.on_equal_press(self, main_output_label)
                on_release: root.on_equal_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#117A65')
                # background_normal: ''
            OperationButton:
                text: "+"
                on_press: root.on_plus_press(self, main_output_label)
                on_release: root.on_plus_release(self, main_output_label)
                font_size: "30dp"
                # background_color: utils.get_color_from_hex('#85C1E9')
                # background_normal: ''

<OperationButton@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#2E86C1')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

